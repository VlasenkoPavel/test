{
  "extends": "tslint-config-airbnb",
  "rules": {
    "adjacent-overload-signatures": true,
    "class-name": true,
    "curly": true,
    "cyclomatic-complexity": [
      true,
      15
    ],
    "indent": [
      true,
      "spaces"
    ],
    "ter-indent": [
      true,
      4,
      { "SwitchCase": 1 }
    ],
    "ter-arrow-parens": [false],
    "triple-equals": false,
    "max-classes-per-file": [
      true,
      1
    ],
    "max-file-line-count": [
      true,
      550
    ],
    "max-line-length": [
      true,
      {"limit": 120, "ignore-pattern": "^( +\\* |.+`)"}
    ],

    "member-access": true,
    "member-ordering": [
      true,
      {
        "order": "fields-first"
      }
    ],
    "no-default-export": true,
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-internal-module": true,
    "no-parameter-properties": true,
    "no-magic-numbers": [false],
    "no-trailing-whitespace": true,
    "no-unsafe-finally": true,
    "no-var-keyword": true,
    "object-shorthand-properties-first": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "prefer-const": true,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "space-before-function-paren": [
      true,
      "asyncArrow"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "trailing-comma": [
      true, {
        "multiline": {
          "objects": "ignored",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "never"
        },
        "singleline": "never"
      }
    ],
    "no-unused-expression": true,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-trailing-underscore",
      "allow-pascal-case"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ]
  },
  "radix": false
}
